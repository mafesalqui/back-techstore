{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "orderNumber": {
      "type": "string",
      "required": true
    },
    "customer": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "statusOrder": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "pending",
        "processing",
        "completed",
        "cancelled"
      ]
    },
    "total": {
      "type": "decimal",
      "required": true
    },
    "shippingAddress": {
      "type": "text",
      "required": true
    },
    "paymentMethod": {
      "type": "string",
      "required": true
    },
    "items": {
      "type": "component",
      "component": "product.order-item",
      "repeatable": true
    }
  }
}
